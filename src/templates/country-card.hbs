{{#each this}}
  <div class='card-img-top'>
    <img src='{{flags.svg}}' alt='{{name}}' width='50px' height='50px' />
  </div>
  <h1 class='card-title'>{{name}}</h1>
  <p class='card-text'><b class='card-text__info'>Capital:</b> {{capital}}</p>
  <p class='card-text'><b class='card-text__info'>Population:</b> {{population}}</p>
  <p class='card-text'><b class='card-text__info'>Languages:</b>{{#each this.languages}}
      {{name}}{{#unless @last}},{{/unless}}
    {{/each}}</p>
{{/each}}